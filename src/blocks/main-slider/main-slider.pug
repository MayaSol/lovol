//- Все примеси в этом файле должны начинаться c имени блока (main-slider)

mixin main-slider(props={}, mods)

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' main-slider--' + modsList[i].trim();
      }
    }

  .main-slider.swiper(class=allMods)&attributes(attributes)
    .main-slider__inner.swiper-wrapper
      block
    .main-slider__pagination.swiper-pagination

mixin main-slider-item(props={}, mods)

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' main-slider__item--' + modsList[i].trim();
      }
    }

  .main-slider__item.swiper-slide(class=allMods)&attributes(attributes)
    block
