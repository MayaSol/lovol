//- Все примеси в этом файле должны начинаться c имени блока (form-find)

mixin form-find(props={}, mods)

  //- Принимает:
  //-   props    {object} - параметры
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +form-find('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' form-find--' + modsList[i].trim();
      }
    }

  .form-find(class=allMods)&attributes(attributes)
    block
